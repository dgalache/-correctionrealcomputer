  %thead
    %tr
      %th Nome
      %th Telefone
      %th Endereco
      %th Cpf
      %th Satisfacao
      %th
      %th
      %th

  %tbody
    - @clientes.each do |cliente|
      %tr
        %td= cliente.nome
        %td= cliente.telefone
        %td= cliente.endereco
        %td= cliente.cpf
        %td= cliente.satisfacao
        %td= link_to 'Show', cliente
        %td= link_to 'Edit', edit_cliente_path(cliente)
